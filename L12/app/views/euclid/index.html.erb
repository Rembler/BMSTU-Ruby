<h3> Input data </h3>
<%= form_tag("/euclid/output", :method => "get") do %>
  <%= label_tag("First number:") %>
  <%= text_field_tag(:num1) %> <br/>
  <%= label_tag("Second number:") %>
  <%= text_field_tag(:num2) %> <br/>
  <%= submit_tag("Calc result") %>
<% end %>
<%= form_tag('/signout', :method => "get") do %>
  <%= submit_tag("Log out") %>
<% end %>
<%= form_tag('/users', :method => "get") do %>
  <%= submit_tag("List of users") %>
<% end %>